<?xml version="1.0"?>

<web-app metadata-complete="true">
	<!-- disable "servlet api 3.0 classpath scanning" otherwise dead slow startup -->
	<!-- metadata-complete="true" above is also needed -->
	<!-- http://jira.codehaus.org/browse/JETTY-1503 -->
	<absolute-ordering />

	<display-name>simpleproxy</display-name>
	
	<servlet>
		<servlet-name>SimpleProxy</servlet-name>
		<servlet-class>org.esupportail.SimpleProxy</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SimpleProxy</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	
</web-app>
